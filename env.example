# Anti-Filter Bridge - Environment Configuration Example
# Copy this file to .env and modify the values as needed

# Application Settings
APP_NAME=Anti-Filter Bridge
APP_ENV=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8443
WORKERS=4

# Security Settings (IMPORTANT: Change these in production!)
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (Optional)
DATABASE_URL=

# Proxy Settings (Optional)
PROXY_ENABLED=false
PROXY_URL=

# SSL/TLS Certificate Paths (for server)
SSL_CERT_FILE=certs/cert.pem
SSL_KEY_FILE=certs/key.pem

# Client Settings
CLIENT_LOCAL_PORT=1080
CLIENT_SERVER_URI=wss://your-server-address:8443

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/anti_filter_bridge.log

# Connection Settings
PING_INTERVAL=30
PING_TIMEOUT=60
MAX_MESSAGE_SIZE=10485760  # 10MB
MAX_CONNECTIONS=1000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# CORS Settings
CORS_ORIGINS=["*"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]
