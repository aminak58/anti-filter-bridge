# Anti-Filter Bridge Configuration
# Copy this file to .env and update the values

# Server Configuration
HOST=0.0.0.0
PORT=8443
LOG_LEVEL=INFO

# SSL Configuration (if not using Nginx for SSL termination)
# SSL_CERT_FILE=/path/to/cert.pem
# SSL_KEY_FILE=/path/to/key.pem

# Security
SECRET_KEY=your-secret-key-here
TOKEN_EXPIRE_HOURS=24

# Rate Limiting
RATE_LIMIT=100  # Requests per minute per IP

# Connection Settings
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=300  # seconds
KEEPALIVE_INTERVAL=30  # seconds

# Logging
LOG_FILE=/var/log/anti-filter-bridge/anti-filter-bridge.log
LOG_MAX_SIZE=10  # MB
LOG_BACKUP_COUNT=5

# Monitoring (optional)
# PROMETHEUS_ENABLED=false
# PROMETHEUS_PORT=9090

# Database (if used in the future)
# DB_URI=sqlite:///anti_filter_bridge.db
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10

# External Services (if needed)
# EXTERNAL_API_KEY=your-api-key
# EXTERNAL_API_URL=https://api.example.com
